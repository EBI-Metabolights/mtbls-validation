{
  "opa.roots": ["${workspaceFolder}/validation"],
  "opa.bundleMode": false,
  "opa.strictMode": true,
  "opa.schema": "${workspaceFolder}/validation/schemas",
  "opa.formatter": "opa-fmt",
  "files.exclude": {
    "**/__pycache__": true,
    ".*cache*": true,
    ".*coverage*": true
  },
  "cSpell.words": [
    "endswith",
    "metabolights",
    "metabolon",
    "MTBLS",
    "prioritised",
    "rego",
    "sprintf",
    "startswith",
    "wiff"
  ],
  "python-envs.defaultEnvManager": "ms-python.python:uv",
  "python-envs.defaultPackageManager": "ms-python.python:uv",
  "regoTest.policyTestDir": "validation",
  "regoTest.testFilePatterns": ["**/*_test/*_test.rego"],
  "files.autoSave": "afterDelay",
  "debugpy.showPythonInlineValues": true,
  "[python]": {
    "editor.defaultFormatter": "astral-sh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "ruff.enable": true,
  "ruff.lint.enable": true
}
